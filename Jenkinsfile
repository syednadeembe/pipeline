pipeline {
    agent any 
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello world!' 
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Hi world!' 
            }
        }
        stage('Stage 3') {
            steps {
                echo 'Bye world!' 
            }
        }
    }
}